<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="creditAccount.configuration.view" path="/admin/module/CreditAccount">
        <default key="_controller">CreditAccount\Controller\Admin\ConfigurationController::viewAction</default>
    </route>

    <route id="creditAccount.configuration.save" path="/admin/module/CreditAccount/save" methods="post">
        <default key="_controller">CreditAccount\Controller\Admin\ConfigurationController::saveAction</default>
    </route>

    <route id="creditAccount.addAmount" path="/admin/creditAccount/add">
        <default key="_controller">CreditAccount\Controller\Admin\CreditAccountAdminController::addAmount</default>
    </route>

    <route id="creditAccount.useAmountInOrder" path="creditAccount/order/amount">
        <default key="_controller">CreditAccount\Controller\Front\CreditAccountFrontController::useAmountInOrder</default>
    </route>

    <route id="creditAccount.useAmount" path="creditAccount/use">
        <default key="_controller">CreditAccount\Controller\Front\CreditAccountFrontController::useAmount</default>
    </route>

    <route id="creditAccount.cancelUsage" path="creditAccount/cancel">
        <default key="_controller">CreditAccount\Controller\Front\CreditAccountFrontController::cancelUsage</default>
    </route>

</routes>
